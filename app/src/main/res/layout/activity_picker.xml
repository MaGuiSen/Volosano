<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/Main_btnTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="选时间" />

    <Button
        android:id="@+id/Main_btnDat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="选日期" />

    <Button
        android:id="@+id/Main_btnValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="选数值" />

    <Button
        android:id="@+id/Main_btnValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="选数值（多个）" />

    <Button
        android:id="@+id/Main_btnType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="选字符串选项" />

    <TextView
        android:id="@+id/Main_tvSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/Main_pvLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <lib.widget.PickTimeView
            android:id="@+id/pickTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <lib.widget.PickTimeView
            android:id="@+id/pickDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <lib.widget.PickValueView
                android:layout_weight="1"
                android:id="@+id/pickValue3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>
            <lib.widget.PickValueView
                android:layout_weight="1"
                android:id="@+id/pickValue2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible" />
        </LinearLayout>
        <lib.widget.PickValueView
            android:id="@+id/pickValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <lib.widget.PickValueView
            android:id="@+id/pickValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <lib.widget.PickValueView
            android:id="@+id/pickString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
